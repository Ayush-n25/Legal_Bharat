<div
style="
  background-color: #b3e5fc;
  border-radius: 10px;
  padding: 2rem;
  margin-top: 2rem;
"
>
<% lawyers.forEach((lawyer) => { %>
  <% const isConnected = con.some(c => c.connection === lawyer.email); %>
  <% if (!isConnected) { %>
    <div class="container mt-5 d-flex justify-content-center">
      <div class="card p-3" style="width: fit-content">
        <div class="d-flex align-items-center">
          <div class="image">
            <img
              src="<%= lawyer.pic_lawyer %>"
              class="rounded"
              width="100"
              style="margin: 1rem"
            />
          </div>

          <div class="ml-3 w-100">
            <h4 class="mb-0 mt-0"><%= lawyer.full_lawyer_name %></h4>
            <span><%= lawyer.email %></span>

            <br />
            <span><b>City:</b>&nbsp;<%= lawyer.City_lawyer %></span>

            <br />
            <span><b>State:</b>&nbsp;<%= lawyer.State_lawyer %></span>

            <div
              class="button mt-2 d-flex flex-row align-items-center"
              style="gap: 1rem"
            >
              <button
                class="btn btn-sm btn-primary w-100 ml-2"
                onclick="sendCon('<%= lawyer.email %>')"
              >
                Connect
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>
<% }); %>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
function sendCon(lawyerEmail) {
  console.log(`Sending connection request to "${lawyerEmail}"`);
  const userEmail = document.cookie._id;
  console.log(userEmail);
  $.post("/sendConReq", { lawyerEmail }, (data) => {
    alert(data);
    location.reload();
  });
}
</script>



