                  <div class="d-flex flex-column">
                    <span class="followers">Followers</span>
                    <span class="number2">0</span>
                  </div>

                  <div class="d-flex flex-column">
                    <span class="rating">Rating</span>
                    <span class="number3">-</span>
                  </div>
                </div>

                <div class="button mt-2 d-flex flex-row align-items-center">
                  <button class="btn btn-sm btn-primary w-100 ml-2">
                    Follow
                  </button>
                  <button
                    class="btn btn-sm btn-primary w-100 ml-2"
                    onclick="sendConsultEmail(this)"
                    data-email='<%= lawyer.email %>'
                  >
                    Consult
                  </button>
                  <button
                    class="btn btn-sm btn-primary w-100 ml-2"
                    onclick="sendBookEmail('<%= lawyer.email %>')"
                  >
                    Book
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
